{
  "_comment": "USG RADIUS - Small Business Configuration",
  "_description": "Production configuration for small business (10-100 users)",
  "_security_notes": [
    "Replace all secrets with strong random values (16+ characters)",
    "Use environment variables for secrets in production",
    "Enable audit logging for compliance",
    "Restrict listen_address to management network",
    "Configure firewall rules to limit access to RADIUS port"
  ],

  "listen_address": "::",
  "listen_port": 1812,
  "secret": "${RADIUS_DEFAULT_SECRET}",

  "clients": [
    {
      "address": "192.168.10.0/24",
      "secret": "${RADIUS_WIRELESS_SECRET}",
      "name": "Wireless Access Points",
      "enabled": true
    },
    {
      "address": "192.168.20.10",
      "secret": "${RADIUS_VPN_SECRET}",
      "name": "VPN Gateway",
      "enabled": true
    },
    {
      "address": "192.168.30.0/24",
      "secret": "${RADIUS_SWITCH_SECRET}",
      "name": "Network Switches (802.1X)",
      "enabled": true
    }
  ],

  "users": [
    {
      "username": "admin",
      "password": "${RADIUS_ADMIN_PASSWORD}",
      "attributes": {}
    }
  ],

  "verbose": false,
  "log_level": "info",
  "audit_log_path": "/var/log/radius/audit.log",
  "strict_rfc_compliance": true,
  "request_cache_ttl": 60,
  "request_cache_max_entries": 10000,
  "rate_limit_per_client_rps": 100,
  "rate_limit_per_client_burst": 200,
  "rate_limit_global_rps": 500,
  "rate_limit_global_burst": 1000
}
