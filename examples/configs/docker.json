{
  "_comment": "USG RADIUS - Docker/Container Configuration",
  "_description": "Configuration optimized for containerized deployment",
  "_docker_notes": [
    "All secrets must be provided via environment variables",
    "Mount this config as read-only volume",
    "Mount /var/log/radius as volume for audit logs",
    "Use Docker secrets or Kubernetes secrets for production",
    "Health check: radtest against Status-Server port"
  ],

  "listen_address": "::",
  "listen_port": 1812,
  "secret": "${RADIUS_SECRET}",

  "clients": [
    {
      "address": "${CLIENT_1_NETWORK:-192.168.1.0/24}",
      "secret": "${CLIENT_1_SECRET}",
      "name": "${CLIENT_1_NAME:-Client Network 1}",
      "enabled": true
    },
    {
      "address": "${CLIENT_2_NETWORK:-10.0.0.0/8}",
      "secret": "${CLIENT_2_SECRET}",
      "name": "${CLIENT_2_NAME:-Client Network 2}",
      "enabled": true
    }
  ],

  "users": [
    {
      "username": "${ADMIN_USERNAME:-admin}",
      "password": "${ADMIN_PASSWORD}",
      "attributes": {}
    }
  ],

  "verbose": false,
  "log_level": "${LOG_LEVEL:-info}",
  "audit_log_path": "/var/log/radius/audit.log",
  "strict_rfc_compliance": true,
  "request_cache_ttl": 60,
  "request_cache_max_entries": 10000,
  "rate_limit_per_client_rps": 100,
  "rate_limit_per_client_burst": 200,
  "rate_limit_global_rps": 1000,
  "rate_limit_global_burst": 2000
}
