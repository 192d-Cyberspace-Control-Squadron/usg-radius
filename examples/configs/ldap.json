{
  "listen_address": "::",
  "listen_port": 1812,
  "secret": "${RADIUS_SECRET}",
  "strict_rfc_compliance": true,

  "log_level": "info",
  "audit_log_path": "/var/log/radius/audit.log",

  "clients": [
    {
      "name": "Wireless Controller",
      "address": "192.168.1.10",
      "secret": "${WLC_SECRET}",
      "enabled": true
    },
    {
      "name": "VPN Gateway",
      "address": "10.0.0.1/32",
      "secret": "${VPN_SECRET}",
      "enabled": true
    }
  ],

  "ldap": {
    "url": "ldaps://ldap.example.com:636",
    "base_dn": "dc=example,dc=com",
    "bind_dn": "cn=radius-service,ou=service-accounts,dc=example,dc=com",
    "bind_password": "${LDAP_BIND_PASSWORD}",
    "search_filter": "(uid={username})",
    "attributes": ["dn", "cn", "uid", "memberOf"],
    "timeout": 10,
    "starttls": false,
    "verify_tls": true
  },

  "request_cache_ttl": 60,
  "request_cache_max_entries": 10000,

  "rate_limit_per_client_rps": 100,
  "rate_limit_per_client_burst": 200,
  "rate_limit_global_rps": 1000,
  "rate_limit_global_burst": 2000
}
