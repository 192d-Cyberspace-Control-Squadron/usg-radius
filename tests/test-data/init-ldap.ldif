# LDAP Test Data Initialization
# This file contains test data for LDAP integration tests
#
# To load this data into the OpenLDAP test container:
# ldapadd -x -H ldap://localhost:389 -D "cn=admin,dc=example,dc=com" -w admin -f init-ldap.ldif

# Create organizational units
dn: ou=users,dc=example,dc=com
objectClass: organizationalUnit
ou: users

dn: ou=groups,dc=example,dc=com
objectClass: organizationalUnit
ou: groups

# Create test users
dn: uid=testuser,ou=users,dc=example,dc=com
objectClass: inetOrgPerson
objectClass: posixAccount
objectClass: shadowAccount
uid: testuser
sn: User
givenName: Test
cn: Test User
displayName: Test User
uidNumber: 10000
gidNumber: 10000
userPassword: {SSHA}password123
homeDirectory: /home/testuser
loginShell: /bin/bash
mail: testuser@example.com

dn: uid=adminuser,ou=users,dc=example,dc=com
